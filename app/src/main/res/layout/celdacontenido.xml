<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="180dp"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_ImagenPelicula"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/espacioStd"
        android:paddingBottom="@dimen/espacioS"
        app:cardCornerRadius="@dimen/espacioS"
        app:cardElevation="2dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

        <ImageView
            android:id="@+id/imageView_ImagenContenidoPeliculas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/linearlayout_tituloContenido"
            style="@style/infoAficheLista"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_tituloContenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="#fff" />
        </LinearLayout>

    <ImageView
        android:id="@+id/imageView_IconoContenido"
        android:layout_above="@id/linearlayout_tituloContenido"
        style="@style/iconoAficheLista"
        app:srcCompat="@drawable/ic_peliculas_24dp" />

</RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>