<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edu.a0817moacn01c_3.MainActivity">

    <ImageButton
        android:id="@+id/buttonIrAPachorra"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:onClick="irAPachorra"
        android:scaleType="fitCenter"
        android:src="@drawable/pachorra"
        android:text="Pachorra en la cama"
        android:padding="@dimen/espacioStd"
        android:textSize="@dimen/espacioStd" />

    <ImageButton
        android:id="@+id/buttonIrACine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:scaleType="fitCenter"
        android:src="@drawable/cine"
        android:text="Cine"
        android:padding="@dimen/espacioStd"
        android:textSize="@dimen/espacioStd" />

</LinearLayout>
