<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_pachorra"
    tools:context="com.example.edu.a0817moacn01c_3.View.PachorraFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView_tituloLista1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo Lista"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"

        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerPachorra1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="5dp"

        android:orientation="horizontal"
        android:layout_below="@id/textView_tituloLista1"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:id="@+id/textView_tituloLista2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo Lista"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/recyclerPachorra1"

        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerPachorra2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/textView_tituloLista2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/textView_tituloLista3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo Lista"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/recyclerPachorra2"

        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerPachorra3"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/textView_tituloLista3"
        android:layout_marginLeft="10dp"
        />

    </RelativeLayout>
</ScrollView>

</android.support.design.widget.CoordinatorLayout>
