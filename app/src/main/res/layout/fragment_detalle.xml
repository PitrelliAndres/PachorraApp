<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edu.a0817moacn01c_3.DetalleFragment">


    <RelativeLayout
        android:id="@+id/contenidosEncabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_detalleBackdrop"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/derek_backdrop" />

        <ImageView
            android:id="@+id/imageView_ImagenPelicula"
            style="@style/detalleAfiche"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/derek"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_detalleBackdrop"
            android:layout_marginLeft="@dimen/espacioS"
            android:layout_marginTop="@dimen/espacioS"
            android:layout_toRightOf="@id/imageView_ImagenPelicula">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/espacioS">

                <TextView
                    android:id="@+id/textview_detallePuntuacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="0.0"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/espacioStd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_detallePuntuacion"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:text="IMDB"
                    android:textSize="@dimen/espacioS" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_Genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardView_puntaje"
            android:layout_marginLeft="@dimen/espacioS"
            android:layout_toRightOf="@id/cardView_puntaje"
            android:layout_above="@+id/scrollView2"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/espacioS">

                <TextView
                    android:id="@+id/textview_genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/espacioS"
                    android:layout_marginRight="@dimen/espacioS"
                    android:gravity="center_vertical"
                    android:text="Acci칩n" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_A침o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardView_puntaje"
            android:layout_alignTop="@+id/cardView_puntaje"
            android:layout_marginLeft="@dimen/espacioS"
            android:layout_toRightOf="@+id/cardview_Genero">

            <TextView
                android:padding="@dimen/espacioS"
                android:id="@+id/textview_a침o"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2010"
                android:textSize="@dimen/espacioStd" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardView_puntaje"
            android:layout_alignTop="@+id/cardView_puntaje"
            android:layout_marginLeft="@dimen/espacioS"
            android:layout_toRightOf="@id/cardview_A침o"
            >

            <TextView
                android:id="@+id/textview_clasificacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/espacioS"
                android:text="ATP"
                android:textSize="@dimen/espacioStd" />

        </android.support.v7.widget.CardView>
 <!--   </RelativeLayout>
<RelativeLayout
    android:id="@+id/contenidosCuerpo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">-->

    <ScrollView
        android:layout_below="@id/imageView_ImagenPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/espacioS"
            >

            <TextView
                android:id="@+id/textview_Sinopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espacioS"
                android:text="Sinopsis" />

            <TextView
                android:id="@+id/textview_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_Sinopsis"
                android:text="@string/lorem_ipsum" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/espacioStd"
        android:src="@android:drawable/ic_menu_share"
        app:layout_anchorGravity="bottom|right" />
    <!--app:layout_anchor="@id/coordinator_detalle"-->

</android.support.design.widget.CoordinatorLayout>
