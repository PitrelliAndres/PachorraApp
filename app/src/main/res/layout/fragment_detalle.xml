<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edu.a0817moacn01c_3.DetalleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_detalleBackdrop"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/derek_backdrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/espacioStd"
            android:layout_marginTop="@dimen/espacioStd"
            android:orientation="horizontal"
            android:paddingLeft="140dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/espacioS"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_detallePuntuacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/espacioStd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="IMDB"
                    android:textSize="@dimen/espacioS" />

            </LinearLayout>

            <TextView
                android:id="@+id/textview_genero"
                android:text="AcciÃ³n"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/espacioS"
                />
                <!--android:textSize="@dimen/espacioS"-->

            <TextView
                android:id="@+id/textview_ano"
                android:text="2010"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/espacioS"
                android:textSize="@dimen/espacioStd" />

            <TextView
                android:id="@+id/textview_clasificacion"
                android:textSize="@dimen/espacioStd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/espacioStd"
            android:layout_marginRight="@dimen/espacioStd"
            android:layout_marginTop="@dimen/espacioS"
            android:orientation="vertical">

            <TextView
                android:text="Sinopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espacioS"
                />

            <TextView
                android:id="@+id/textview_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum" />
        </LinearLayout>
</ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_ImagenPelicula"
        style="@style/detalleAfiche"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/derek"
        app:layout_anchor="@id/imageview_detalleBackdrop"
        app:layout_anchorGravity="bottom|left" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/espacioStd"
        android:src="@android:drawable/ic_menu_share"
        app:layout_anchorGravity="bottom|right" />

</android.support.design.widget.CoordinatorLayout>
