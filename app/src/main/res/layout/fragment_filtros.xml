<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#42a5f5"
    tools:context="com.example.edu.a0817moacn01c_3.View.FiltrosFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >



<android.support.design.widget.TextInputLayout
    android:id="@+id/textinputlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_centerInParent="true"
    android:textColor="#000000"/>
    <EditText
        android:id="@+id/editext_introducir_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Introduzca Fecha"
        android:layout_below="@id/textinputlayout"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
       />
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editext_introducir_fecha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="20dp">
        <Button
            android:id="@+id/boton_filtrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="filtrarLista"
            android:text="Filtrar"
            android:background="#0069c0"




         />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/idSpinnerCardviewGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textinputlayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            app:cardBackgroundColor="#0069c0"
            >

            <Spinner
                android:id="@+id/spinner_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                >

            </Spinner>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:layout_above="@id/idSpinnerCardviewGenero"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:id="@+id/cardviewSpinnerContenido"
            app:cardBackgroundColor="#0069c0"
            android:layout_alignLeft="@id/idSpinnerCardviewGenero"
            android:layout_alignRight="@id/idSpinnerCardviewGenero"
                >
            <Spinner
                android:id="@+id/spinner_tipoContenido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"



                >

            </Spinner>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtros"
            android:layout_above="@id/cardviewSpinnerContenido"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:textColor="#000000"
            />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
