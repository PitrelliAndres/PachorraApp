<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="actionBarStyle">@style/appbar</item>-->
    </style>

    <style name="toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/appbarTitulo</item>
        <item name="elevation">4dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="appbarTitulo" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">#ddffffff</item>
        <item name="android:background">@color/cardview_light_background</item>
    </style>

    <style name="ThemeOverlay.MiVieja.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#ddffffff</item>
    </style>

    <style name="detalleAfiche">
        <item name="android:layout_marginLeft">@dimen/espacioStd</item>
    </style>

    <style name="detalleCardviews">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">@dimen/espacioS</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="detalleTitulos">
        <item name="android:layout_marginBottom">@dimen/espacioS</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textoEspecial</item>
    </style>
    <style name="detalleImagenDeFondo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">210dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/derek_backdrop</item>
    </style>

    <style name="infoAficheLista">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/negroTransp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="iconoAficheLista">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="fabmenu">
        <item name="menu_fab_show_animation">@anim/fab_scale_up</item>
        <item name="menu_fab_hide_animation">@anim/fab_scale_down</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_labels_colorNormal">@color/colorAccent</item>
        <item name="menu_animationDelayPerItem">50</item>
    </style>
    <style name="fabmenuboton">
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_size">mini</item>
    </style>

</resources>
