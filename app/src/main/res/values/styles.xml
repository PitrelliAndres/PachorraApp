<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="detalleAfiche">
        <item name="android:layout_marginLeft">@dimen/espacioStd</item>
    </style>
    <style name="detalleCardviews">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">@dimen/espacioS</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="detalleTitulos">
        <item name="android:layout_marginBottom">@dimen/espacioS</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textoEspecial</item>
    </style>
</resources>
